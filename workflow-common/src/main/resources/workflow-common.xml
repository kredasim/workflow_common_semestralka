<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath:activiti-context.xml"/>

    <context:component-scan base-package="cz.cvut.fit.workflow.common"/>

    <bean class="cz.cvut.fit.bpm.common.TaskServiceProvider">
        <constructor-arg>
            <map>
                <entry key="ACTIVITI" value-ref="activitiTaskService"/>
                <entry key="LOMBARDY" value-ref="lombardyTaskService"/>
            </map>
        </constructor-arg>
    </bean>

    <bean class="cz.cvut.fit.bpm.common.ProcessServiceProvider">
        <constructor-arg>
            <map>
                <entry key="ACTIVITI" value-ref="activitiProcessService"/>
                <entry key="LOMBARDY" value-ref="lombardyProcessService"/>
            </map>
        </constructor-arg>
    </bean>
    <bean id="activitiTaskService" class="cz.cvut.fit.industry.TaskServiceAdapter"/>
    <bean id="activitiProcessService" class="cz.cvut.fit.industry.ProcessServiceAdapter"/>

    <!--<bean id="activitiTaskService" class="cz.cvut.fit.bpm.dummy.ActivitiDummyTaskServiceImpl"/>-->
    <bean id="lombardyTaskService" class="cz.cvut.fit.bpm.dummy.LombardyDummyTaskServiceImpl"/>
    <!--<bean id="activitiProcessService" class="cz.cvut.fit.bpm.dummy.ActivityDummyProcessServiceImpl"/>-->
    <bean id="lombardyProcessService" class="cz.cvut.fit.bpm.dummy.LombardyDummyProcessServiceImpl"/>
</beans>